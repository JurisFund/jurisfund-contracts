{
  "name": "jurisfund-contracts",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/JurisFund/jurisfund-contracts.git",
  "author": "Joseph <devanderson0412@gmail.com>",
  "license": "MIT",
  "scripts": {
    "compile": "hardhat compile",
    "recompile": "npm-run-all clean compile",
    "script": "yarn script:localhost",
    "script:hh": "npx hardhat run --network hardhat",
    "script:localhost": "npx hardhat run --network localhost",
    "script:sepolia": "npx hardhat run --network sepolia",
    "script:mainnet": "npx hardhat run --network mainnet",
    "deploy": "yarn deploy:localhost",
    "deploy:localhost": "npx hardhat deploy --network localhost",
    "deploy:sepolia": "npx hardhat deploy --network sepolia",
    "deploy:mainnet": "npx hardhat deploy --network mainnet",
    "console": "yarn console:localhost",
    "console:localhost": "npx hardhat console --network localhost",
    "console:sepolia": "npx hardhat console --network sepolia",
    "console:mainnet": "npx hardhat console --network mainnet",
    "verify:sepolia": "npx hardhat upload:batch --network sepolia --contracts",
    "verify:mainnet": "npx hardhat upload:batch --network mainnet --contracts",
    "contracts:mainnet": "npx hardhat contracts --network mainnet",
    "contracts:sepolia": "npx hardhat contracts --network sepolia",
    "test": "npx hardhat test",
    "test:gas": "cross-env REPORT_GAS=true hardhat test",
    "prettier:check": "prettier --check \"**/*.{ts,js,sol}\"",
    "prettier:fix": "prettier --write \"**/*.{ts,js,sol}\"",
    "solhint:check": "npx solhint 'contracts/**/*.sol'",
    "solhint:fix": "npx solhint 'contracts/**/*.sol' --fix",
    "lint:check": "yarn prettier:check && yarn solhint:check && npx eslint **/*.{js,ts}",
    "lint:fix": "yarn prettier:fix && yarn solhint:fix && npx eslint --no-error-on-unmatched-pattern **/*.{js,ts} --fix",
    "coverage": "cross-env HARDHAT_DEPLOY_FIXTURE=true hardhat coverage",
    "clean": "rimraf abis artifacts cache types",
    "postinstall": "npm-run-all husky:init",
    "husky:init": "husky install",
    "husky:commit": "lint-staged",
    "husky:push": "yarn lint:fix"
  },
  "lint-staged": {
    "**/*.{ts,js,sol}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "hardhat": "^2.19.1",
    "hardhat-storage-layout": "^0.1.7"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@nomiclabs/hardhat-solhint": "^3.0.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/jest": "^29.5.8",
    "@types/mocha": "^10.0.4",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "chai": "^4.3.10",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "ethers": "^6.8.1",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-deploy": "^0.11.43",
    "hardhat-deploy-ethers": "^0.4.1",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-preprocessor": "^0.1.5",
    "hardhat-waffle": "^0.0.1-security",
    "hardhat-watcher": "^2.5.0",
    "husky": "^8.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "prettier-plugin-solidity": "^1.2.0",
    "solhint": "^4.0.0",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.2",
    "typescript": "^5.2.2"
  }
}
